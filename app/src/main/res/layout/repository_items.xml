<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/holo_blue_dark"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp">


        <ImageView
            android:id="@+id/phototv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repoOnwertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="repoOnwertv" />

            <TextView
                android:id="@+id/repoNametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reponametv" />

            <TextView
                android:id="@+id/repostartv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="repostartv" />

            <TextView
                android:id="@+id/repoDescriptiontv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="repoDescriptiontv" />


        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>