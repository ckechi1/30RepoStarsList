<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="467dp"
        android:layout_height="172dp"
        android:layout_margin="2dp">


        <TextView
            android:id="@+id/repostartv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="296dp"
            android:layout_marginTop="130dp"
            android:text="repostartv" />

        <TextView
            android:id="@+id/repoNametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:text="reponametv" />

        <TextView
            android:id="@+id/repoDescriptiontv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="53dp"
            android:text="repoDescriptiontv" />

        <TextView
            android:id="@+id/repoOnwertv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="88dp"
            android:layout_marginBottom="21dp"
            android:text="repoOnwertv" />

        <ImageView
            android:id="@+id/phototv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="269dp"
            android:layout_marginBottom="19dp"
            app:srcCompat="@drawable/ic_star_black_24dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>